{
  "name": "telegram-bot-boilerplate",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "npm run clean && tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "local": "npm run build && node lib/local.js",
    "clean": "rimraf lib/",
    "test:c": "jest --coverage --detectOpenHandles",
    "test:u": "jest ./src/__tests__/unit --detectOpenHandles"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "i18next": "^23.10.1",
    "lodash": "^4.17.21",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@sentry/integrations": "^7.108.0",
    "@sentry/node": "^7.108.0",
    "@sentry/serverless": "^7.108.0",
    "@sentry/tracing": "^7.108.0",
    "@types/lodash": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.3"
  },
  "private": true
}
